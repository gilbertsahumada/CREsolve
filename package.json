{
  "name": "@cresolver/root",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "e2e": "yarn e2e:up && yarn e2e:setup && yarn e2e:test; yarn e2e:down",
    "e2e:up": "docker compose -f docker-compose.e2e.yml up -d --build --wait",
    "e2e:setup": "cd scripts && npx tsx setup-demo.ts --profile e2e --output ../e2e/demo-config.json",
    "e2e:test": "cd e2e && npx vitest run --config vitest.e2e.config.ts",
    "e2e:down": "docker compose -f docker-compose.e2e.yml down",
    "local:setup": "cd scripts && npx tsx setup-demo.ts --profile local",
    "workflow:simulate:sepolia": "cd cre-workflow && cre workflow simulate ./cresolver-resolution --target=staging-settings --env .env",
    "sepolia:wallets": "cd scripts && npx tsx generate-wallets.ts",
    "sepolia:sync": "./scripts/sepolia-sync.sh",
    "sepolia:normalize": "./scripts/sepolia-normalize.sh",
    "sepolia:audit": "./scripts/sepolia-audit.sh",
    "sepolia:deploy": "./scripts/sepolia-deploy.sh",
    "sepolia:verify": "./scripts/sepolia-verify.sh",
    "agent:test": "cd agent && yarn test",
    "scripts:typecheck": "cd scripts && npx tsc --noEmit",
    "e2e:typecheck": "cd e2e && npx tsc --noEmit",
    "workflow:typecheck": "cd cre-workflow/cresolver-resolution && npx tsc --noEmit"
  }
}
